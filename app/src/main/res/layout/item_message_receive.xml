<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_4"
    android:paddingTop="@dimen/dp_1"
    android:paddingEnd="@dimen/dp_4"
    android:paddingBottom="@dimen/dp_1">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_profile" />

    <LinearLayout
        android:id="@+id/message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_48"
        android:layout_toEndOf="@id/avatar"
        android:background="@drawable/custom_message_receive"
        android:minHeight="@dimen/dp_40"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8">

        <TextView
            android:id="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_2"
            android:paddingTop="@dimen/dp_4"
            android:text="hihi asfa sf asfasfas asf asf asf asf asf asf asffasf af"
            android:textColor="@color/textColorMessagePrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:text="15:20"
            android:textColor="@color/textColorMessageSecondary"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>